<!doctype html>
<html lang="{{ page.seoLang }}">

	<head>
	
		{% include "head.twig" %}
		
		{% include basekit.headScript %}
		
		<script type="text/javascript">
			$(function() {
				$('a[href*=#]:not([href=#])').click(function() {
					if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
						var target = $(this.hash);
						target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
						if (target.length) {
							$('html,body').animate({
								scrollTop: target.offset().top
							}, 1000);
							return false;
						}
					}
				});
			});
		</script>

	</head>

	<body id="image-fixed" class="{{ page.backgroundClass }} {{ site.colorSwatch }}">

		<div class="page-wrap">

			{% block content %}
			{% endblock %}

			{% include "footer.twig" %}

		</div>
		
		<script type="text/javascript">
			!function() {
				function supportsSVG() {
					return !!document.createElementNS && !! document.createElementNS('http://www.w3.org/2000/svg', 'svg').createSVGRect
				}
				if (supportsSVG()) document.documentElement.className += ' svg'
			}()
			var HeaderHeight = document.getElementById("header-feature").offsetHeight;
			window.onscroll = function emParallax() {
				document.getElementById("featurehome").style.height = ((window.pageYOffset/20)*60)+HeaderHeight+"px";
			}
		</script>

		{% include basekit.bodyScript %}

	</body>
</html>